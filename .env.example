# Database
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/database

# JWT Secrets (Generate strong random strings)
JWT_SECRET=your-jwt-secret-here
SECRET_KEY_ACCESS_TOKEN=your-access-token-secret-here
SECRET_KEY_REFRESH_TOKEN=your-refresh-token-secret-here

# Email Configuration
RESEND_API_KEY=your-resend-api-key
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=Your App <your-email@gmail.com>
ADMIN_EMAIL=admin@yourapp.com

# Cloudinary
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Flutterwave
FLUTTERWAVE_PUBLIC_KEY=your-public-key
FLUTTERWAVE_SECRET_KEY=your-secret-key
FLUTTERWAVE_WEBHOOK_SECRET_HASH=your-webhook-hash

# reCAPTCHA
RECAPTCHA_SECRET_KEY=your-recaptcha-secret

# Frontend URLs
FRONTEND_URL=http://localhost:3000,https://yourapp.com

# Server
PORT=8080
NODE_ENV=development

# Session Secret (Generate a strong random string for production)
SESSION_SECRET=your-session-secret-minimum-32-characters-change-in-production